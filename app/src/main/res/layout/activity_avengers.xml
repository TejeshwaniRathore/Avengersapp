<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgtonystark"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/tony_stark_new"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/txtname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tony Stark"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgtonystark"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/txtemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tony@starkindustries.com"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgtonystark"
                android:layout_below="@+id/txtname"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/txtphonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="+91 8297382"
                android:layout_toRightOf="@+id/imgtonystark"
                android:layout_below="@+id/txtemail"
                android:textSize="18sp"
                android:textColor="#000000"

                />


        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/thor"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/thor"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/txtnamethor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thor"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/thor"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/txtemailthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="thor@starkindustries.com"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/thor"
                android:layout_below="@+id/txtnamethor"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/txtphonenumberthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="+91 8297382"
                android:layout_toRightOf="@+id/thor"
                android:layout_below="@+id/txtemailthor"
                android:textSize="18sp"
                android:textColor="#000000"

                />


        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgcap"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/captainam"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/txtnamecp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Captain america"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgcap"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/txtemailcap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="captian@starkindustries.com"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgcap"
                android:layout_below="@+id/txtnamecp"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/txtphonenumbercap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="+91 8297382"
                android:layout_toRightOf="@+id/imgcap"
                android:layout_below="@+id/txtemailcap"
                android:textSize="18sp"
                android:textColor="#000000"

                />


        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgblack"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/black"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/txtnameb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Black widow"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgblack"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/txtemailb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="black@starkindustries.com"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgblack"
                android:layout_below="@+id/txtnameb"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/txtphonenumberb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="+91 8297382"
                android:layout_toRightOf="@+id/imgblack"
                android:layout_below="@+id/txtemailb"
                android:textSize="18sp"
                android:textColor="#000000"

                />


        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgsp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/spiderman"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/txtnamesp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spiderman"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgsp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/txtemailsp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tony@starkindustries.com"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgsp"
                android:layout_below="@+id/txtnamesp"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/txtphonenumberthorsp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="+91 8297382"
                android:layout_toRightOf="@+id/imgsp"
                android:layout_below="@+id/txtemailsp"
                android:textSize="18sp"
                android:textColor="#000000"

                />


        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imghulk"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/hulk"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/txtnameh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hulk"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imghulk"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/txtemailhulk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hulk@starkindustries.com"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imghulk"
                android:layout_below="@+id/txtnameh"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/txtphonenumberh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="+91 8297382"
                android:layout_toRightOf="@+id/imghulk"
                android:layout_below="@+id/txtemailhulk"
                android:textSize="18sp"
                android:textColor="#000000"

                />


        </RelativeLayout>
        <EditText
            android:id="@+id/etMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Enter your message"
            android:inputType="text"
            />
        <Button
            android:id="@+id/btnMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send"
            android:layout_below="@+id/etMessage"

            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="135dp"
            android:background="#000000"
            android:textColor="#FFFFFF"/>

    </LinearLayout>


</ScrollView>