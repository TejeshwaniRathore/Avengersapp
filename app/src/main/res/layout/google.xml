<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imggoogle"
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:src="@drawable/google"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="100dp"
        />
    <TextView
        android:id="@+id/txtsign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imggoogle"
        android:text="Sign In"
        android:textSize="35sp"
        android:layout_marginLeft="130dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/txtwith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="with your google Account"
        android:layout_below="@+id/txtsign"
        android:layout_marginLeft="100dp"
        android:textSize="23dp"/>
    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#d3d3d3"
        android:hint="Username or Email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textColorHint="#d3d3d3"
        android:layout_below="@id/txtwith"/>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/username"
       android:text="Forgot email?"
       android:textSize="17dp"
       android:textColor="#1769aa"
       android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1769aa"
        android:text="Create account"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="300dp"
        android:background="#2196f3"
        android:layout_marginBottom="20dp"
        android:elevation="6dp"/>


</RelativeLayout>